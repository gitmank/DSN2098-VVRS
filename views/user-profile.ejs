<!-- VVRS ADMIN PROFILE PAGE -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- getting IBM Plex Mono from Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com"> 
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> 
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400&display=swap" rel="stylesheet">
    <!-- linking stylesheet -->
    <link rel="stylesheet" href="/css/user-profile.css">
    <title>VVRS User Profile Page</title>
</head>
<body>
    <!-- header contains logo, title and nav buttons -->
    <header id="navbar">
        <div><img src="/resources/VVRS-logo-wobg.png" alt="VVRS Logo" id="vvrs-logo"></div>
        <h1 id="title">User Profile</h1>
        <div id="actions">
            <a href="/login"><button id="home-button" class="action-button"><label class="button-label">HOME</label></button></a>
            <a href="/logout"><button id="logout-button" class="action-button"><label class="button-label">LOGOUT</label></button></a>
        </div>
    </header>
    <!-- main pane contains main content -->
    <div id="main-panel">
        <div style="display: grid; grid-template-columns: 1fr; justify-items: center;">
            <img src="/resources/user-icon.svg" alt="user-icon" id="user-icon">
            <label for="user-icon"><h2>Account Details</h2></label>
        </div>
        <div id="account-details">
            <h3>Username:</h3>
            <h4 id="username_of_admin"><%= user.username %></h4>
            <h3>Email:</h3>
            <h4 id="email_of_admin"><%= user.email %></h4>
            <form action="/changeEmail" method="post" id="change-email-form" style="display: grid; gap: 10px;">
                <input type="email" name="newEmail" placeholder="Enter new email" style="height: 40px; padding: 5px; font-size: 20px;">
                <input type="submit" value="CHANGE EMAIL" form="change-email-form"></input>
            </form>
            <h3>Password:</h3>
            <form action="/changePassword" method="post" id="change-password-form" style="display: grid; gap: 10px;">
                <input type="password" name="newPassword" placeholder="Enter new password" style="height: 40px; padding: 5px; font-size: 20px;">
                <input type="submit" value="CHANGE PASSWORD" form="change-password-form"></input>
            </form>
        </div>
    </div>
    <footer><div>made with â™¡ by 21BCY</div></footer>
</body>
</html>
<!-- linking front-end javascript -->
<script src="/js/admin-profile.js"></script>